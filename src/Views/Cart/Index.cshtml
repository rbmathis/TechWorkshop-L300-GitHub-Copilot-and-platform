@model ZavaStorefront.Models.CartViewModel
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-4">
    <h1 class="mb-4">Shopping Cart</h1>

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info">
            <h4>Your cart is empty</h4>
            <p>Start shopping to add items to your cart.</p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Continue Shopping</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Subtotal</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center">
                                        @if (item.Product != null)
                                        {
                                            <img src="@item.Product.ImageUrl" class="cart-item-image me-3" alt="@item.Product.Name"
                                                onerror="this.src='https://via.placeholder.com/80x60?text=@Uri.EscapeDataString(item.Product.Name ?? "Product")'>">
                                            <div>
                                                <h6 class="mb-0">@item.Product.Name</h6>
                                                <small class="text-muted">@item.Product.Description</small>
                                            </div>
                                        }
                                    </div>
                                </td>
                                <td>$@item.Product.Price.ToString("F2")</td>
                                <td>
                                    <form asp-controller="Cart" asp-action="UpdateQuantity" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.Product.Id" />
                                        <input type="number" name="quantity" value="@item.Quantity" min="1" max="99"
                                            class="form-control form-control-sm" style="width: 70px;"
                                            onchange="this.form.submit()" />
                                    </form>
                                </td>
                                <td>$@((item.Product.Price * item.Quantity).ToString("F2"))</td>
                                <td>
                                    <form asp-controller="Cart" asp-action="RemoveFromCart" method="post" class="d-inline">
                                        <input type="hidden" name="productId" value="@item.Product.Id" />
                                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Order Summary</h5>
                        <hr>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items:</span>
                            <span>@Model.ItemCount</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <strong>Total:</strong>
                            <span class="fw-semibold">$@Model.Total.ToString("F2")</span>
                        </div>

                        @if (Model.IsBulkDiscountEnabled)
                        {
                            <div class="alert alert-success py-2 mb-2">
                                <div class="d-flex justify-content-between">
                                    <span><strong>Bulk discounts</strong> are enabled</span>
                                    @if (Model.DiscountApplied)
                                    {
                                        <span class="badge bg-success">Applied</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No discount yet</span>
                                    }
                                </div>
                                <small class="text-muted">Orders over $@Model.FirstTierThreshold.ToString("F2") get
                                    @Model.FirstTierDiscount%, over $@Model.SecondTierThreshold.ToString("F2") get
                                    @Model.SecondTierDiscount%.</small>
                            </div>

                            <div class="d-flex justify-content-between mb-1">
                                <span>Discounted total:</span>
                                <span>$@Model.DiscountedTotal.ToString("F2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-3">
                                <span>Savings:</span>
                                <span class="text-success">$@Model.Savings.ToString("F2")</span>
                            </div>
                        }

                        <form asp-controller="Cart" asp-action="Checkout" method="post">
                            <button type="submit" class="btn btn-success w-100 mb-2">Checkout</button>
                        </form>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary w-100">Continue
                            Shopping</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>